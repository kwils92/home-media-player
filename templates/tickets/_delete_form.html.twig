<form method="post" action="{{ path('tickets_delete', {'idtickets': ticket.idtickets}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ticket.idtickets) }}">
    <button class="btn">Delete</button>
</form>
