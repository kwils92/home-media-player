{% extends 'base.html.twig' %}

{% block title %}Gonna watch something? Nice.{% endblock %}

{% block body %}

{% include 'modules/nav.html.twig' %}

<h1 class="c-page-title m-blink-shadow-colour__header m-align-c">Batch Movie Upload</h1>
<p class="m-blink-shadow-colour__text m-align-c">Use this page to upload movies via batch file.</p>

{{ form_start(form) }}
       <div class="c-form-row">
        {{ form_label(form.file, 'File', {
                'label_attr': {'class': 'c-form__label m-blink-shadow-colour__text'}
            })
        }}
        {{ form_widget(form.file, {
                'attr': {'class': 'c-form__field m-align-c'}
            })
        }}
    </div>

    <button class="c-button m-button-glow m-add-req">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}

{% endblock %}
